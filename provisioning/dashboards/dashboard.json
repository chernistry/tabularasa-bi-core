// ==== GRAFANA DASHBOARD: BASIC METRICS ====
// This dashboard visualizes basic JVM and HTTP metrics for TabulaRasa BI Core.
{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "JVM Memory Used",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{job='taboola-bi-core-q1'}) by (area)",
          "legendFormat": "{{area}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "unit": "bytes"
    },
    {
      "id": 2,
      "title": "HTTP Server Requests (Rate)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count{job='taboola-bi-core-q1'}[5m])",
          "legendFormat": "{{uri}} - {{method}}",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    }
  ],
  "schemaVersion": 38,
  "style": "dark",
  "tags": [],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "TabulaRasa BI Core - Basic Metrics",
  "uid": "tabularasa-basic-metrics",
  "version": 1
} 